@page
@model ReLuxWeb.Pages.Admin.Products.IndexModel


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp Add a Product
            </a>
        </div>
    </div>

</div>

<table id="myTable" class=" table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Est. Retail Value</th>
            <th>Rate Condition</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
</table>

@section Scripts {
    <script src="~/js/product.js"></script>
}
